<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="#17606060"
    app:cardElevation="0dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgCast"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_profile"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvCastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="Wanda Maximoff"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_sans_semibold"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/imgCast"
            app:layout_constraintTop_toTopOf="@id/imgCast"/>

        <TextView
            android:id="@+id/tvCastCharacter"
            tools:text="Wanda Maximoff"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/nunito_sans"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCastName"
            app:layout_constraintStart_toStartOf="@id/tvCastName"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>